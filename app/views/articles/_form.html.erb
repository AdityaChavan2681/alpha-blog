
<div class="container">


<div class="row justify-content-center">
  <div class ="col-10">
    <%= render "shared/errors"%>
    <%= form_with(model: @article,class:"shadow-sm p-3 mb-3 bg-info rounded", local: true) do |f|%>
      <div class ="form-group row">
        <%= f.label :title, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :title, class: "form-control shadow rounded", placeholder:"Title of Article" %>
        </div>
      </div>

      <div class="form-group row">
          <%= f.label :description , class: "col-2 col-form-label text-light"%><br/>
          <div class="col-10">
            <%= f.text_area :description, class: "form-control shadow rounded", rows: 10, placeholder:"Description"%>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit class:"btn btn-outline-light btn-lg"%>
      </div>
      <% end %>
      </div>
  </div>
    <%= link_to "[ Back ]"  , articles_path, class:"justify-content-center" %>
</div>